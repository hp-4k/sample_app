<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag password_resets_path do %>
      <%= label_tag 'password_reset[email]', "Email" %>
      <%= email_field_tag 'password_reset[email]', '', class: 'form-control' %>
      <%= submit_tag 'Request password reset', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>