<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag login_path do %>
      <%= label_tag 'session[email]', "Email" %>
      <%= email_field_tag 'session[email]', nil, class: 'form-control' %>
      <%= label_tag 'session[password]', "Password" %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= password_field_tag 'session[password]', nil, class: 'form-control' %>
      <%= label_tag 'session[remember_me]', class: 'checkbox inline' do %>
        <%= check_box_tag 'session[remember_me]' %>
        <span>Remember me on this computer</span>
      <% end %>
      <%= submit_tag 'Log in', class: 'btn btn-primary' %>
    <% end %>
    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
